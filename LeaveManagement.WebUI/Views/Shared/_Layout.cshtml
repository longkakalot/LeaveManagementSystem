@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext!.User;
    var username = user.Identity!.IsAuthenticated ? user.Identity.Name : "Khách";
    var appTitle = "Quản lý nghỉ phép";
    var avatarUrl = "~/images/avatar-default.png";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appTitle</title>
    <link rel="icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagement.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
</head>
<body>
    <div class="container-fluid px-0">
        <div class="row g-0 flex-nowrap">
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="sidebar col-lg-2 d-lg-block bg-light py-3 px-2 shadow-sm">
                <div class="d-flex align-items-center mb-4">
                    <img src="~/img/logoSmall.png" alt="Logo" class="app-logo me-2" />
                    <span class="h5 fw-bold mb-0">@appTitle</span>
                </div>
                <!-- Collapsible menu for mobile -->
                <button class="btn btn-outline-secondary d-lg-none mb-3" type="button" id="closeSidebarBtn">
                    <i class="bi bi-x-lg"></i> Đóng menu
                </button>
                <div class="mb-2 mt-3 small text-muted text-uppercase">Nghiệp vụ</div>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LeaveRequest" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")"
                           asp-controller="LeaveRequest" asp-action="Create">
                            <i class="bi bi-plus-circle me-2"></i> Tạo đơn nghỉ phép
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LeaveApprovalRequest" ? "active" : "")"
                           asp-controller="LeaveApprovalRequest" asp-action="Index">
                            <i class="bi bi-check2-square me-2"></i> Duyệt đơn nghỉ
                        </a>
                    </li>
                </ul>
                <div class="mb-2 mt-3 small text-muted text-uppercase">Danh sách</div>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LeaveRequest" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="LeaveRequest" asp-action="Index">
                            <i class="bi bi-list-task me-2"></i> Danh sách đơn của tôi
                        </a>
                    </li>
                </ul>
                <div class="mb-2 mt-3 small text-muted text-uppercase">Báo cáo</div>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Report" ? "active" : "")"
                           asp-controller="Report" asp-action="Index">
                            <i class="bi bi-bar-chart-line me-2"></i> Báo cáo nghỉ phép
                        </a>
                    </li>
                </ul>
                <div class="mb-2 mt-3 small text-muted text-uppercase">Thông báo &amp; Hướng dẫn</div>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Notification" ? "active" : "")"
                           asp-controller="Notification" asp-action="Index">
                            <i class="bi bi-bell me-2"></i> Thông báo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Guide" ? "active" : "")"
                           asp-controller="Guide" asp-action="Index">
                            <i class="bi bi-question-circle me-2"></i> Hướng dẫn
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col ms-sm-auto px-0" id="mainContentArea">
                <!-- Header -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3 py-2 border-bottom">
                    <div class="container-fluid">
                        <button class="btn btn-outline-primary d-lg-none me-3" type="button" id="sidebarToggleBtn">
                            <i class="bi bi-list"></i>
                        </button>
                        <span class="fs-5 fw-bold text-primary">@ViewData["Title"]</span>
                        <div class="d-flex align-items-center ms-auto gap-3">
                            <span id="currentDateTime" class="me-2 text-secondary small"></span>
                            @if (user.Identity!.IsAuthenticated)
                            {
                                <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width:32px;height:32px;object-fit:cover;" />
                                <span class="fw-bold text-primary ms-1">@username</span>
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline ms-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                                </a>
                            }
                        </div>
                    </div>
                </nav>

                <!-- Main body -->
                <div class="container py-4" id="mainContentContainer">
                    @RenderBody()
                </div>
                <footer class="footer border-top text-muted py-2 mt-4">
                    <div class="container text-end">
                        &copy; @DateTime.Now.Year - @appTitle
                    </div>
                </footer>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Ngày giờ hiện hành
        function updateClock() {
            let now = new Date();
            let d = now.toLocaleDateString('vi-VN');
            let t = now.toLocaleTimeString('vi-VN');
            document.getElementById('currentDateTime').innerText = d + " " + t;
        }
        setInterval(updateClock, 1000);
        updateClock();

        // Sidebar responsive cho mobile/tablet
        const sidebar = document.getElementById('sidebarMenu');
        const sidebarToggleBtn = document.getElementById('sidebarToggleBtn');
        const closeSidebarBtn = document.getElementById('closeSidebarBtn');
        const mainContent = document.getElementById('mainContentArea');

        if (sidebarToggleBtn) {
            sidebarToggleBtn.addEventListener('click', function () {
                sidebar.classList.add('show');
                mainContent.classList.add('main-content-blur');
            });
        }
        if (closeSidebarBtn) {
            closeSidebarBtn.addEventListener('click', function () {
                sidebar.classList.remove('show');
                mainContent.classList.remove('main-content-blur');
            });
        }
        // Nhấn ngoài sidebar để ẩn (mobile)
        document.addEventListener('click', function (e) {
            if (window.innerWidth < 992 && sidebar.classList.contains('show')) {
                if (!sidebar.contains(e.target) && !sidebarToggleBtn.contains(e.target)) {
                    sidebar.classList.remove('show');
                    mainContent.classList.remove('main-content-blur');
                }
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
