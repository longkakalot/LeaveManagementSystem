@model LeaveManagement.WebUI.ViewModels.LeaveRequestTabViewModel
@using LeaveManagement.WebUI.ViewModels
@using LeaveManagement.Domain.Enums

@{
    List<LeaveRequestDto> displayList = Model.CurrentTab switch
    {
        "Drafts" => Model.Drafts,
        "Submitted" => Model.Submitted,
        "Approved" => Model.Approved,
        "Rejected" => Model.Rejected,
        _ => Model.Drafts
    };
    int totalItems = Model.CurrentTab switch
    {
        "Drafts" => Model.DraftTotal,
        "Submitted" => Model.SubmittedTotal,
        "Approved" => Model.ApprovedTotal,
        "Rejected" => Model.RejectedTotal,
        _ => Model.DraftTotal
    };
    int totalPages = (int)Math.Ceiling((double)totalItems / Model.PageSize);
    int pageIndex = Model.PageIndex;
    string currentTab = Model.CurrentTab!;
}

@if (displayList == null || !displayList.Any())
{
    <div class="alert alert-info text-center my-5">
        <i class="bi bi-info-circle"></i> Không có đơn nào.
    </div>
}
else
{
    <style>
        .card.leave-card {
            min-height: 200px;
            display: flex;
            flex-direction: column;
        }

        .table-details {
            margin-bottom: 0;
        }
    </style>
    <div class="row g-4">
        @foreach (var item in displayList)
        {
            var collapseId = $"collapseDetails_{item.Id}";
            var btnId = $"btnCollapse_{item.Id}";
            var hasMoreDetails = item.Details != null && item.Details.Count > 2;
            <div class="col-12 col-md-6 d-flex">
                <div class="card border-primary border-2 shadow-sm h-100 rounded-4 leave-card w-100">
                    <div class="card-header bg-white py-2 px-3 d-flex justify-content-between align-items-center rounded-top-4">
                        <div>
                            <span class="fw-bold text-primary">
                                @item.FromDate.ToString("dd/MM/yyyy") - @item.ToDate.ToString("dd/MM/yyyy")
                            </span>
                            <span class="fw-bold text-primary">
                                (Số ngày nghỉ: @item.TotalLeaveDays)
                            </span>
                            <span class="badge bg-info ms-2">
                                @(item.StepOrder == 0 ? "Chưa gửi duyệt" : $"{item.StepApprove}/{item.StepOrder}")
                            </span>
                        </div>
                        <span class="badge
                            @(item.Status == LeaveStatus.Pending ? "bg-secondary" :
                              item.Status == LeaveStatus.Submitted ? "bg-primary" :
                              item.Status == LeaveStatus.Approved ? "bg-success" :
                              item.Status == LeaveStatus.Rejected ? "bg-danger" : "bg-light text-dark")">
                            @item.StatusLabel
                        </span>
                    </div>
                    <div class="card-body pt-3 pb-2 px-3 flex-grow-1 d-flex flex-column">
                        <div class="mb-2"><strong>Lý do:</strong> @item.Reason</div>
                        <div class="mb-2">
                            <i class="bi bi-geo-alt"></i> <strong>Nơi nghỉ:</strong> 
                            @item.VacationPlace, @item.WardName, @item.ProvinceName, @item.CountryName
                        </div>
                        <div class="mb-2">
                            <i class="bi bi-bookmark-star"></i> <strong>Mã đơn:</strong> @item.Id
                        </div>

                        <!-- Chi tiết ngày nghỉ (2 dòng đầu) -->
                        @if (item.Details != null && item.Details.Any())
                        {
                            <div class="table-responsive mt-3 flex-grow-1 d-flex flex-column">
                                <table class="table table-bordered table-sm table-details shadow-sm">
                                    <thead class="table-light text-center align-middle">
                                        <tr>
                                            <th class="small">#</th>
                                            <th class="small">Ngày nghỉ</th>
                                            <th class="small">Buổi</th>
                                            <th class="small">Số ngày nghỉ</th>
                                            <th class="small">Năm tính phép</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Math.Min(item.Details.Count, 2); i++)
                                        {
                                            var d = item.Details[i];
                                            <tr class="align-middle">
                                                <td class="text-center">@(@i + 1)</td>
                                                <td class="text-center">@d.Date.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center">
                                                    @if (d.Period == "FullDay")
                                                    {
                                                        <span class="badge bg-success">Nguyên ngày</span>
                                                    }
                                                    else if (d.Period == "Morning")
                                                    {
                                                        <span class="badge bg-primary">Sáng</span>
                                                    }
                                                    else if (d.Period == "Afternoon")
                                                    {
                                                        <span class="badge bg-warning text-dark">Chiều</span>
                                                    }
                                                </td>
                                                <td class="text-center">@d.Value.ToString("0.##")</td>
                                                <td class="text-center">@d.Year</td>
                                            </tr>
                                        }
                                    </tbody>
                                    @if (hasMoreDetails)
                                    {
                                        <tbody class="collapse" id="@collapseId">
                                            @for (int i = 2; i < item.Details.Count; i++)
                                            {
                                                var d = item.Details[i];
                                                <tr class="align-middle">
                                                    <td class="text-center">@(@i + 1)</td>
                                                    <td class="text-center">@d.Date.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-center">
                                                        @if (d.Period == "FullDay")
                                                        {
                                                            <span class="badge bg-success">Nguyên ngày</span>
                                                        }
                                                        else if (d.Period == "Morning")
                                                        {
                                                            <span class="badge bg-primary">Sáng</span>
                                                        }
                                                        else if (d.Period == "Afternoon")
                                                        {
                                                            <span class="badge bg-warning text-dark">Chiều</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">@d.Value.ToString("0.##")</td>
                                                    <td class="text-center">@d.Year</td>
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                </table>
                                @if (hasMoreDetails)
                                {
                                    <div class="text-center mt-2">
                                        <a id="@btnId"
                                           class="btn btn-link btn-sm px-2"
                                           data-bs-toggle="collapse"
                                           href="#@collapseId"
                                           role="button"
                                           aria-expanded="false"
                                           aria-controls="@collapseId">
                                            Xem chi tiết <i class="bi bi-chevron-down"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light small mt-3">Không có chi tiết ngày nghỉ</div>
                        }
                    </div>
                    <div class="card-footer bg-white border-0 py-2 px-3 rounded-bottom-4">
                        <div class="d-flex gap-2">
                            @if (item.Status == LeaveStatus.Pending || item.Status == LeaveStatus.Submitted)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm px-3" title="Sửa">
                                    <i class="bi bi-pencil-square me-1"></i> Sửa
                                </a>
                            }
                            @if (item.Status == LeaveStatus.Pending || item.Status == LeaveStatus.Submitted)
                            {
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc muốn hủy đơn nghỉ phép này không?');">
                                    <button type="submit" class="btn btn-danger btn-sm px-3" title="Hủy đơn">
                                        <i class="bi bi-x-circle me-1"></i> Hủy
                                    </button>
                                </form>
                            }
                            @if (item.Status == LeaveStatus.Pending)
                            {
                                <form asp-action="Submit" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-primary btn-sm px-3" title="Gửi duyệt">
                                        <i class="bi bi-send-check me-1"></i> Gửi duyệt
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Script đổi label/icon nút Xem chi tiết khi collapse -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var allBtns = document.querySelectorAll('a[data-bs-toggle="collapse"]');
            allBtns.forEach(function (btn) {
                var targetId = btn.getAttribute('href');
                var collapseEl = document.querySelector(targetId);
                if (collapseEl) {
                    collapseEl.addEventListener('show.bs.collapse', function () {
                        btn.innerHTML = 'Ẩn chi tiết <i class="bi bi-chevron-up"></i>';
                    });
                    collapseEl.addEventListener('hide.bs.collapse', function () {
                        btn.innerHTML = 'Xem chi tiết <i class="bi bi-chevron-down"></i>';
                    });
                }
            });
        });
    </script>

    <!-- Phân trang -->
    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == pageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-tab="@currentTab"
                           asp-route-page="@i"
                           asp-route-pageSize="@Model.PageSize">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
