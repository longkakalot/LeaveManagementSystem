@model LeaveManagement.WebUI.ViewModels.CreateLeaveRequestViewModel

@{
    ViewData["Title"] = "Tạo đơn nghỉ phép";
}

<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-gradient bg-primary text-white rounded-top-4 pb-3">
                    <h4 class="mb-0">
                        <i class="bi bi-journal-plus me-2"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body p-4">

                    <!-- Info group -->
                    <div class="mb-3 row g-2">
                        <div class="col-12 col-sm-8">
                            <label class="col-form-label fw-bold">
                                Số ngày phép năm
                                <span class="text-primary">(@Model.SoNgayPhepNam = @Model.SoNgayNghiCoBan + @Model.NgayPhepCongThem)</span>
                            </label>
                        </div>
                        <div class="col-6">
                            <span class="fw-bold text-secondary small">
                                Đã nghỉ: <span class="text-danger">@Model.TotalLeaveDays</span>
                            </span>
                        </div>
                        <div class="col-6">
                            <span class="fw-bold text-secondary small">
                                Còn lại: <span class="text-success">@((Model.SoNgayPhepNam - Model.TotalLeaveDays).ToString("0.##"))</span>
                            </span>
                        </div>
                    </div>

                    <form asp-action="Create" method="post" autocomplete="off">
                        <!-- Group: Thông tin nghỉ phép -->
                        <fieldset class="mb-4 border rounded-3 px-3 pb-2 pt-2">
                            <legend class="float-none w-auto fs-6 px-2 text-primary mb-2">Thông tin nghỉ phép</legend>
                            <div class="row g-3 align-items-end">
                                <div class="col-md-6">
                                    <label asp-for="FromDate" class="form-label">Từ ngày</label>
                                    <input asp-for="FromDate" type="date" class="form-control shadow-sm" />
                                    <span asp-validation-for="FromDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ToDate" class="form-label">Đến ngày</label>
                                    <input asp-for="ToDate" type="date" class="form-control shadow-sm" />
                                    <span asp-validation-for="ToDate" class="text-danger"></span>
                                </div>
                                <div class="col-6" id="from-date-type-group">
                                    <label class="form-label">Loại nghỉ bắt đầu</label>
                                    <select asp-for="FromDateType" class="form-select shadow-sm">
                                        <option value="Full">Cả ngày</option>
                                        <option value="Morning">Buổi sáng</option>
                                        <option value="Afternoon">Buổi chiều</option>
                                    </select>
                                </div>
                                <div class="col-6" id="to-date-type-group">
                                    <label class="form-label">Loại nghỉ kết thúc</label>
                                    <select asp-for="ToDateType" class="form-select shadow-sm">
                                        <option value="Full">Cả ngày</option>
                                        <option value="Morning">Buổi sáng</option>
                                        <option value="Afternoon">Buổi chiều</option>
                                    </select>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Group: Lý do nghỉ -->
                        <fieldset class="mb-4 border rounded-3 px-3 pb-2 pt-2">
                            <legend class="float-none w-auto fs-6 px-2 text-primary mb-2">Lý do nghỉ</legend>
                            <div class="mb-3">
                                <label asp-for="Reason" class="form-label">Lý do nghỉ phép</label>
                                <textarea asp-for="Reason" class="form-control shadow-sm" rows="2"></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>
                            
                        </fieldset>

                        <!-- Group: Quốc gia, tỉnh/thành, phường/xã -->
                        <fieldset class="mb-4 border rounded-3 px-3 pb-2 pt-2">
                            <legend class="float-none w-auto fs-6 px-2 text-primary mb-2">Địa điểm nghỉ</legend>
                            <div class="mb-3">
                                <label asp-for="VacationPlace" class="form-label">Địa chỉ nơi nghỉ phép (số nhà, tên đường...)</label>
                                <input asp-for="VacationPlace" class="form-control shadow-sm" />
                                <span asp-validation-for="VacationPlace" class="text-danger"></span>
                            </div>
                            <div class="row g-2 align-items-end mb-3">
                                <div class="col-12 col-md-12">
                                    <label for="CountryCode" class="form-label">Quốc gia</label>
                                    <select asp-for="CountryCode" asp-items="Model.Countries" class="form-select shadow-sm" id="CountryCode"></select>
                                </div>                                
                            </div>
                            <div class="row g-2 align-items-end mb-3">                                
                                <div class="col-12 col-md-6">
                                    <div id="province-block" style="display:@(Model.CountryCode == "VN" ? "block" : "none")">
                                        <label for="ProvinceId" class="form-label">Tỉnh/Thành phố</label>
                                        <select asp-for="ProvinceId" asp-items="Model.Provinces" class="form-select shadow-sm" id="ProvinceId"></select>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div id="ward-block" style="display:@(Model.CountryCode == "VN" && (Model.ProvinceId != 0) ? "block" : "none")">
                                        <label for="WardId" class="form-label">Phường/Xã</label>
                                        <select asp-for="WardId" asp-items="Model.Wards" class="form-select shadow-sm" id="WardId"></select>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <input type="hidden" id="selectedProvince" value="@Model.ProvinceId" />
                        <input type="hidden" id="selectedWard" value="@Model.WardId" />

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-send-check"></i> Gửi yêu cầu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @Html.ValidationSummary(false)
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Responsive select buổi
        function updateSelects() {
            var from = document.getElementById('FromDate').value;
            var to = document.getElementById('ToDate').value;
            var fromGroup = document.getElementById('from-date-type-group');
            var toGroup = document.getElementById('to-date-type-group');
            if (from && to && from === to) {
                fromGroup.style.display = 'block';
                toGroup.style.display = 'none';
            } else if (from && to && from < to) {
                fromGroup.style.display = 'block';
                toGroup.style.display = 'block';
            } else {
                fromGroup.style.display = 'block';
                toGroup.style.display = 'none';
            }
        }
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('FromDate').addEventListener('change', updateSelects);
            document.getElementById('ToDate').addEventListener('change', updateSelects);
            updateSelects();
        });

        $(document).ready(function () {
            $('#CountryCode').select2({
                placeholder: 'Chọn quốc gia...',
                allowClear: true,
                width: '100%'
            });
            $('#ProvinceId').select2({
                placeholder: 'Chọn tỉnh/thành...',
                allowClear: true,
                width: '100%'
            });
            $('#WardId').select2({
                placeholder: 'Chọn xã/phường...',
                allowClear: true,
                width: '100%'
            });

            // Lưu giá trị đã chọn từ Razor (nếu có)
            var selectedProvinceId = $('#selectedProvince').val();
            var selectedWardId = $('#selectedWard').val();

            // Nếu là VN thì hiển thị các block và load dữ liệu mặc định
            if ($('#CountryCode').val() === 'VN') {
                $('#province-block').show();
                loadProvinces(selectedProvinceId);
            } else {
                $('#province-block').hide();
                $('#ward-block').hide();
            }

            $('#CountryCode').change(function () {
                var country = $(this).val();
                if (country === 'VN') {
                    $('#province-block').show();
                    var id = $('#selectedProvince').val() || '50029';
                    loadProvinces(id);
                } else {
                    $('#province-block').hide();
                    $('#ward-block').hide();
                    $('#ProvinceId').empty();
                    $('#WardId').empty();
                }
            });

            $('#ProvinceId').change(function () {
                var provinceId = $(this).val();
                if (provinceId) {
                    $('#ward-block').show();
                    var id = $('#selectedWard').val();
                    loadWards(provinceId, id);
                } else {
                    $('#ward-block').hide();
                    $('#WardId').empty();
                }
            });

            function loadProvinces(selectedProvinceId) {
                $.get('/LeaveRequest/GetProvinces', function (data) {
                    $('#ProvinceId').empty();
                    $.each(data, function (i, item) {
                        $('#ProvinceId').append($('<option>', { value: item.id, text: item.provinceName }));
                    });
                    if (selectedProvinceId != 0) {
                        $('#ProvinceId').val(selectedProvinceId);
                    } else {
                        $('#ProvinceId').val('50029'); // Mặc định Hồ Chí Minh
                    }
                    $('#ProvinceId').trigger('change');
                });
            }

            function loadWards(provinceId, selectedWardId) {
                $.get('/LeaveRequest/GetWardsByProvince?provinceId=' + provinceId, function (data) {
                    $('#WardId').empty();
                    $.each(data, function (i, item) {
                        $('#WardId').append($('<option>', { value: item.id, text: item.wardName }));
                    });
                    if (selectedWardId != 0) {
                        $('#WardId').val(selectedWardId);
                    }
                    else {
                        $('#WardId').val('62659'); // Một ward mặc định, chỉnh lại nếu cần
                    }
                    $('#WardId').trigger('change');
                });
            }
        });
    </script>
}
